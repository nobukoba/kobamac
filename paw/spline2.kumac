 macro spline2 [hid]
* 
* make spline function spl2(x) (fortran function) from histogram
* note: xbins of histogram <= 5000
* 
   xbins = $hinfo([hid],'xbins')
   
   vec/cre xbins2(1) 'i'
   vec/cre x_spl2([xbins]) r
   vec/cre y_spl2([xbins]) r
   vec/cre c_spl2([xbins],3) r
   get/abs [hid] x_spl2
   get/con [hid] y_spl2
   vec/input xbins2(1) [xbins]
   
   app comis quit
      subroutine spl_sub(x,a,c,n)
        integer n,i,j
        real x(0:n), a(0:n), c(0:n,3)
        real h(0:5000), al(0:5000), l(0:5000), mu(0:5000), z(0:5000)
	
        do i=0,n-1
          h(i) = x(i+1) - x(i)
        enddo
        do i=1,n-1
          al(i) = 3.*(a(i+1)-a(i))/h(i) - 3.*(a(i)-a(i-1))/h(i-1)
c          write (*,*) al(i)
        enddo
        l(0)  = 1.
        mu(0) = 0.
        z(0)  = 0.
        do i=1,n-1
          l(i)  = 2.*(x(i+1)-x(i-1)) - h(i-1)*mu(i-1)
          mu(i) = h(i)/l(i)
          z(i)  = (al(i)-h(i-1)*z(i-1))/l(i)
c          write (*,*) l(i),mu(i),z(i)
        enddo
        l(n)   = 1.
        z(n)   = 0.
        c(n,2) = 0.
        do j=n-1,0,-1
          c(j,2) = z(j)-mu(j)*c(j+1,2)
          c(j,1) = (a(j+1)-a(j))/h(j) - h(j)*(c(j+1,2)+2.*c(j,2))/3.
          c(j,3) = (c(j+1,2)-c(j,2))/h(j)/3.
c          write (*,*) j,x(j),a(j),c(j,1),c(j,2),c(j,3)
        enddo
      end
      
      program main
        vector xbins2,x_spl2,y_spl2,c_spl2
        call spl_sub(x_spl2,y_spl2,c_spl2,xbins2(1)-1)
      end
	
      real function spl2(x)
        vector xbins2,x_spl2,y_spl2,c_spl2
        real x
        integer i
        do i=2,xbins2(1)
          if (x .lt. x_spl2(i)) then
            goto 10
	  endif
        enddo
10      continue
	i = i-1
        spl2 = y_spl2(i) + c_spl2(i,1)*(x-x_spl2(i))
     &                 + c_spl2(i,2)*(x-x_spl2(i))**2
     &                 + c_spl2(i,3)*(x-x_spl2(i))**3
      end
   quit
   
